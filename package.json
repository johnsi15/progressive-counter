{
  "name": "progressive-counter",
  "version": "0.2.0",
  "license": "MIT",
  "author": "John Serrano <me@johnserrano.co>",
  "main": "dist/index.js",
  "module": "dist/progressive-counter.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests",
    "test:watch": "dts test --watch",
    "test:coverage": "dts test --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/progressive-counter.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/progressive-counter.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.2",
    "@tsconfig/recommended": "^1.0.3",
    "@tsconfig/vite-react": "^3.0.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "dts-cli": "^2.0.4",
    "husky": "^9.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^11.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "Keywords": [
    "react.js",
    "progressive",
    "counter",
    "JavaScript",
    "progressive-counter"
  ]
}
