{
  "name": "progressive-counter",
  "version": "0.1.0",
  "license": "MIT",
  "author": "John Serrano",
  "main": "dist/index.js",
  "module": "dist/progressive-counter.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/progressive-counter.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/progressive-counter.esm.js",
      "limit": "10 KB"
    }
  ]
}